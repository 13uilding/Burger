<h1 class="title is-1">Burgers!</h1>

<div class="columns">
 <div class="column is-one-third">
  <h2 class="subtitle is-4">Burgers that waiting to be devoured.</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          <li>
            {{burger_name}}
            <button class="change-devour" data-id="{{this.id}}" data-state="false">EAT ME!</button>
          </li>
        {{/unless}}
      {{/each}}
    </ul>   
  </div>
  <div class="column is-one-third burger">
    <div class="imgWrap">
      <img src="/assets/imgs/burger.png" alt="burger">
    </div>
  </div>
</div>
<div class="columns">
  <div class="column is-one-third">

  <div class="column-4">
    <h2 class="subtitle is-4">Burgers that have been devoured.</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}
          <button class="change-devour" data-id="{{this.id}}" data-state="true">REGURGITATE!</button>
          <button class="delete-burger" data-id="{{this.id}}">DIGEST!</button>
        </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
  </div>
  <div class="column is-one-third">
    <h2 class="subtitle is-4">Add a burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
      </div>

      <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1">Devoured!<br>
        <input type="radio" name="devoured" value="0" checked>Waiting!
      </div>

      <button type="submit">Add burger</button>
    </form>
  </div>
</div>


